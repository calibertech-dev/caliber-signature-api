<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Font_Size_Invalid_For_Type</fullName>
    <active>true</active>
    <description>Ensures Font Size is only set for text_input types.</description>
    <errorConditionFormula>AND(
            NOT(ISBLANK(Font_Size__c)),
            TEXT(Place_Type__c) = &apos;text_input&apos;
        )</errorConditionFormula>
    <errorDisplayField>Font_Size__c</errorDisplayField>
    <errorMessage>Font Size can only be set for Text Input place types.</errorMessage>
</ValidationRule>
