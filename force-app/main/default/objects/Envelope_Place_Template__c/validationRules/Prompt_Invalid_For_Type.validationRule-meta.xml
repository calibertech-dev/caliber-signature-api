<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prompt_Invalid_For_Type</fullName>
    <active>true</active>
    <description>Ensures Prompt is only set for text_input place types.</description>
    <errorConditionFormula>AND(
            NOT(ISBLANK(Prompt__c)),
            TEXT(Place_Type__c) = &apos;text_input&apos;
        )</errorConditionFormula>
    <errorDisplayField>Prompt__c</errorDisplayField>
    <errorMessage>Prompt can only be set for Text Input place types.</errorMessage>
</ValidationRule>
